---
import { Image } from "astro:assets";
import headshot from "../assets/eu.jpg";
---

<div class="relative flex items-center gap-x-4">
  <Image
    src={headshot}
    loading="eager"
    alt="Marcelo's face"
    class="h-12 w-12 rounded-sm"
  />

  <div class="text-lg leading-6">
    <h1 class="font-semibold text-primary text-xl dark:text-white">
      <span class="absolute inset-0"></span>
      Marcelo Schreiber
    </h1>
    <p class="text-zinc-500 dark:text-zinc-400">Fullstack Developer</p>
  </div>
</div>
