---
import { Image } from "astro:assets";
import headshot from "../assets/eu.webp";
---

<div class="relative flex items-center gap-x-4">
  <Image
    src={headshot}
    loading="eager"
    alt="Marcelo's face"
    class="h-14 w-14 rounded-lg"
    densities={[1, 2, 3]}
  />

  <div class="text-lg leading-6">
    <h1 class="font-semibold text-primary text-xl dark:text-white">
      Marcelo Schreiber
    </h1>
    <p class="text-zinc-500 dark:text-zinc-400">Fullstack Developer</p>
  </div>
</div>
